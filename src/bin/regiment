#! /bin/bash

#scheme -h regimentc.1.heap $*
#chez -h regimentc.1.heap $*

MT=`echo '(display (machine-type))' | chez -q`

# Use my default location if it is not set.
if ! [ $REGIMENTD ]; then REGIMENTD=$HOME/regiment_alpha/; fi

# If we can we use the stored heap, otherwise we run it as a script.
if [ -f $REGIMENTD/src/build/$MT/regiment.0.heap ];
then #echo Running regiment from saved heap...;
    $REGIMENTD/depends/rawscheme -h $REGIMENTD/src/build/$MT/regiment.0.heap $*;
else $REGIMENTD/src/regiment_script.ss $*;
fi
