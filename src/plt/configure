#!/bin/bash 

echo Configuring source dependencies for plt version.

rm -f Makefile

echo "##### Auto generated by configure script #####" >> Makefile
echo PLT_MAIN_FILE  = ../compiler_plt.ss  >> Makefile

echo PLT_SRC  = `find . -name "*.ss" | grep -vi ignored` >> Makefile
echo GENERIC_SRC = ../compiler.ss `find ../generic/ -name "*.ss" | grep -vi ignored` >> Makefile
echo "##### End auto generated #####" >> Makefile
echo >> Makefile

cat Makefile.stub >> Makefile
