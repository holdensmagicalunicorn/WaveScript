#!/bin/bash

COMP=.__wsc2Messages.txt
RUN=.__runquery_output_wsc2.txt

echo > $COMP
echo > $RUN

function go () {
    echo; echo; echo; echo; echo; echo; echo;  
    echo "testall_wsc2: Running $1"
    echo "============================================================"
    if ! wsc2 $1 -exit-error; then exit 1; fi
    echo >> $RUN
    echo $1 : >> $RUN
    if ! ./query.exe | head -n 20 >> $RUN; then exit 1; fi
}

